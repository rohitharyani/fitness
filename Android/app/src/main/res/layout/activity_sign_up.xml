<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csulb.wecare.SignUpActivity"
    style="@style/AppTheme"
    android:background="@color/blur_white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dip"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"
                android:layout_weight="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="15dip">
            <EditText
                android:id="@+id/signUpNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:hint="@string/signUpName"
                android:background="@color/lightGray"
                android:textSize="20sp"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="textPersonName"
                android:padding="10dip"
                android:drawableLeft="@drawable/name"
                android:drawablePadding="10dip"

                android:layout_marginBottom="10dip"/>
            <EditText
                android:id="@+id/sigUpEmailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/signUpEmail"
                android:textColor="@android:color/black"
                android:background="@color/lightGray"
                android:textSize="20sp"
                android:textColorHint="@android:color/darker_gray"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:drawableLeft="@drawable/email"
                android:layout_marginBottom="10dip"
                android:drawablePadding="10dip"/>

            <EditText
                android:id="@+id/sigUpPhoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGray"
                android:hint="@string/signUpPhone"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20sp"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10dip"/>
            <EditText
                android:id="@+id/signUpPasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:textColorHint="@android:color/darker_gray"
                android:hint="@string/signUpPassword"
                android:background="@color/lightGray"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:inputType="numberPassword"
                android:padding="10dip"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10dip"/>

                <EditText
                    android:id="@+id/signUpConfirmPasswordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:background="@color/lightGray"
                    android:drawableLeft="@drawable/confirm_password"
                    android:drawablePadding="10dip"
                    android:hint="@string/signUpConfirmPassword"
                    android:textColorHint="@android:color/darker_gray"
                    android:inputType="numberPassword"
                    android:padding="10dip"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

            <Button
                android:id="@+id/loginSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_button_bg"
                android:text="@string/signUpButton"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="10dip"
                android:layout_marginTop="20dip"/>

            </LinearLayout>
        </LinearLayout>
 </RelativeLayout>
