<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_green_light</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
    </style>
    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/holo_green_dark</item>
        <item name="colorPrimaryDark">@android:color/holo_green_light</item>
        <item name="colorAccent">@android:color/holo_green_light</item>
    </style>


    <style name="FacebookLoginButton">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:paddingTop">17dp</item>
        <item name="android:paddingBottom">17dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
</resources>
